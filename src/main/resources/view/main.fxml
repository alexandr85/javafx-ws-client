<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import org.controlsfx.control.StatusBar?>
<GridPane hgap="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          stylesheets="/styles/main.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <MenuBar maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0"
             GridPane.rowIndex="0">
        <Menu text="File">
            <MenuItem fx:id="saveOutputMenu" mnemonicParsing="false" text="Save output" onAction="#saveOutputToFile">
                <graphic>
                    <ImageView>
                        <Image url="@/images/save-output.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
            <MenuItem fx:id="sessionsMenu" mnemonicParsing="false" text="Sessions" onAction="#showSessions">
                <graphic>
                    <ImageView>
                        <Image url="@/images/data-load.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
            <SeparatorMenuItem/>
            <MenuItem fx:id="exitAppMenu" mnemonicParsing="false" text="Exit" onAction="#exitApplication">
                <graphic>
                    <ImageView>
                        <Image url="@/images/exit.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
        </Menu>
        <Menu text="Settings">
            <CheckMenuItem fx:id="showStatusBar" text="Status bar" selected="true" onAction="#changesStatusBarVisible"/>
            <CheckMenuItem fx:id="autoScrollMenuItem" selected="true" text="Auto scroll"
                           onAction="#changeAutoScrollStatus"/>
            <CheckMenuItem fx:id="showFilter" text="Filter" selected="false" onAction="#changeFilterVisible"/>
            <CheckMenuItem fx:id="showFind" mnemonicParsing="false" text="Find" onAction="#changeFindVisible"/>
        </Menu>
    </MenuBar>
    <VBox maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
          prefWidth="660.0" GridPane.rowIndex="1" alignment="CENTER_LEFT">
        <padding>
            <Insets left="20.0"/>
        </padding>
        <GridPane hgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" maxWidth="25.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" maxWidth="25.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="505.0" maxWidth="505.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" maxWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                   prefHeight="25.0" prefWidth="25.0" text="Url" GridPane.columnIndex="0" alignment="CENTER_LEFT"
                   styleClass="label_field"/>
            <ToggleButton fx:id="httpSettings" GridPane.columnIndex="1" prefHeight="20.0" prefWidth="20.0" text=""
                          minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" contentDisplay="CENTER"
                          onAction="#showHttpSettings">
                <tooltip>
                    <Tooltip text="Set headers data"/>
                </tooltip>
                <graphic>
                    <ImageView>
                        <Image url="@/images/http-setting.png"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ToggleButton>
            <TextField fx:id="serverUrl" maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="25.0" prefWidth="505.0" promptText="ws://host.name/path"
                       GridPane.columnIndex="2">
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </TextField>
            <Button fx:id="connectBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0"
                    text="Connect" GridPane.columnIndex="3" onAction="#connectDisconnectAction">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </GridPane>
    </VBox>
    <VBox maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
          prefWidth="660.0" GridPane.rowIndex="2">
        <padding>
            <Insets left="20.0"/>
        </padding>
        <GridPane hgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="55.0" maxWidth="55.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="400.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                   prefHeight="25.0" prefWidth="55.0" text="Message" GridPane.columnIndex="0" alignment="CENTER_LEFT"
                   styleClass="label_field"/>
            <TextField fx:id="sendMsgTextField" disable="true" maxWidth="Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="25.0" prefWidth="400.0" promptText="some text"
                       GridPane.columnIndex="1">
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </TextField>
            <Button fx:id="messageSendBtn" alignment="CENTER" disable="true" maxHeight="-Infinity"
                    maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="100.0" text="Send" GridPane.columnIndex="2"
                    onAction="#sendWebsocketMessage">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <ToggleButton fx:id="sendMsgHistoryBtn" alignment="CENTER" disable="true" maxHeight="-Infinity"
                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                          mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="History"
                          GridPane.columnIndex="3">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ToggleButton>
        </GridPane>
    </VBox>
    <GridPane prefHeight="400.0" styleClass="output_grid" GridPane.rowIndex="3">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>
        <GridPane.margin>
            <Insets bottom="9.0" left="7.0" right="7.0" top="2.0"/>
        </GridPane.margin>
        <FlowPane fx:id="findBar" disable="true" GridPane.rowIndex="0" visible="false" managed="false"
                  alignment="CENTER" hgap="15.0"
                  maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0"
                  prefWidth="480.0" styleClass="filter_block">
            <TextField fx:id="findTextField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="25.0" prefWidth="200.0"/>
            <Button fx:id="findTextBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="25.0" onMouseClicked="#addToFilterList">
                <graphic>
                    <ImageView>
                        <Image url="@/images/find.png" requestedWidth="16" requestedHeight="16"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </FlowPane>
        <ListView fx:id="outputTextView" GridPane.rowIndex="1" editable="false" prefHeight="100.0" prefWidth="200.0"
                  styleClass="output_text"/>
        <FlowPane fx:id="filterBar" GridPane.rowIndex="2" visible="false" managed="false" alignment="CENTER" hgap="15.0"
                  maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0"
                  prefWidth="480.0" styleClass="filter_block">
            <padding>
                <Insets bottom="2" left="100"/>
            </padding>
            <ToggleButton fx:id="filterOnOffBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                          prefHeight="25.0" prefWidth="25.0" textAlignment="CENTER"
                          onAction="#changeFilterStatus">
                <graphic>
                    <ImageView>
                        <Image url="@/images/filter-off.png"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ToggleButton>
            <TextField fx:id="filterTextField" disable="true" maxHeight="-Infinity"
                       maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                       prefHeight="25.0" prefWidth="200.0"/>
            <Button fx:id="filterAddBtn" disable="true" minHeight="-Infinity" minWidth="-Infinity"
                    mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" onMouseClicked="#addToFilterList">
                <graphic>
                    <ImageView>
                        <Image url="@/images/add.png" requestedWidth="25" requestedHeight="25"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <ToggleButton fx:id="filterListBtn" disable="true" minHeight="-Infinity"
                          minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
                          prefWidth="25.0" text="">
                <graphic>
                    <ImageView>
                        <Image url="@/images/filter-list.png" requestedWidth="25" requestedHeight="25"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ToggleButton>
            <Label fx:id="filterCount" minWidth="100" maxWidth="100"/>
        </FlowPane>
    </GridPane>
    <StatusBar maxHeight="25" GridPane.rowIndex="4" fx:id="statusBar" text="">
        <padding>
            <Insets bottom="3" top="4" left="15" right="15"/>
        </padding>
        <leftItems>
            <Label fx:id="autoScrollLabel" mnemonicParsing="false" maxWidth="-Infinity" text="auto scroll"
                   contentDisplay="RIGHT">
                <graphic>
                    <ImageView>
                        <Image url="@/images/turn-on.png"/>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Auto scroll status"/>
                </tooltip>
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="filterStatusLabel" mnemonicParsing="false" maxWidth="-Infinity" text="filter"
                   contentDisplay="RIGHT">
                <graphic>
                    <ImageView>
                        <Image url="@/images/turn-off.png"/>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Filter status"/>
                </tooltip>
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="timeDiffLabel" mnemonicParsing="false" maxWidth="-Infinity">
                <tooltip>
                    <Tooltip text="Time difference"/>
                </tooltip>
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
        </leftItems>
        <rightItems>
            <Label fx:id="outputMsgCount" mnemonicParsing="false" maxWidth="-Infinity" text="0/0">
                <tooltip>
                    <Tooltip text="All / Selected messages"/>
                </tooltip>
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="headersCount" mnemonicParsing="false" maxWidth="-Infinity" text="0">
                <tooltip>
                    <Tooltip text="Custom headers count"/>
                </tooltip>
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
            <Separator orientation="VERTICAL"/>
            <VBox alignment="CENTER" prefWidth="40">
                <Circle fx:id="connectStatus" radius="10.0" stroke="#fa20201f" strokeType="INSIDE"
                        styleClass="disconnected"/>
            </VBox>
        </rightItems>
    </StatusBar>
</GridPane>
