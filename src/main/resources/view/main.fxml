<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import org.controlsfx.control.cell.ImageGridCell?>
<?import org.controlsfx.control.StatusBar?>
<GridPane hgap="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <MenuBar maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0"
             GridPane.rowIndex="0">
        <Menu text="File">
            <MenuItem mnemonicParsing="false" text="Save output" onAction="#saveOutputToFile">
                <graphic>
                    <ImageView>
                        <Image url="@/images/save-output.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
            <SeparatorMenuItem/>
            <MenuItem mnemonicParsing="false" text="Exit" onAction="#exitApplication">
                <graphic>
                    <ImageView>
                        <Image url="@/images/exit.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
        </Menu>
        <Menu text="View">
            <CheckMenuItem fx:id="autoScrollMenuItem" selected="true" text="Auto scroll" onAction="#changeAutoScrollStatus"/>
            <CheckMenuItem fx:id="showFilter" text="Filter" selected="false" onAction="#changeFilterVisible"/>
            <CheckMenuItem fx:id="showStatusBar" text="Status bar" selected="true" onAction="#changesStatusBarVisible"/>
        </Menu>
        <Menu text="Profile">
            <MenuItem mnemonicParsing="false" text="Save profile" onAction="#saveProfileData">
                <graphic>
                    <ImageView fitHeight="16" fitWidth="16">
                        <Image url="@/images/profile-save.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
            <MenuItem mnemonicParsing="false" text="Load profile" onAction="#loadProfileData">
                <graphic>
                    <ImageView fitHeight="16" fitWidth="16">
                        <Image url="@/images/profile-load.png"/>
                    </ImageView>
                </graphic>
            </MenuItem>
        </Menu>
    </MenuBar>
    <VBox maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
          prefWidth="570.0" GridPane.rowIndex="1" alignment="CENTER_LEFT" >
        <padding>
            <Insets left="10.0"/>
        </padding>
        <GridPane hgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="30.0" maxWidth="30.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="30.0" maxWidth="30.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="460.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" maxWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                   prefHeight="25.0" prefWidth="36.0" text="Url" GridPane.columnIndex="0" alignment="CENTER_RIGHT"
                   styleClass="label_field">
                <padding>
                    <Insets left="0" top="0" right="5" bottom="0"/>
                </padding>
            </Label>
            <ImageGridCell fx:id="editCookie" GridPane.columnIndex="1" onMouseClicked="#setCookieForRequest">
                <graphic>
                    <ImageView fitHeight="27" fitWidth="27">
                        <Image url="@/images/cookie-edit.png"/>
                    </ImageView>
                </graphic>
                <padding>
                    <Insets left="0" top="0" right="5" bottom="0"/>
                </padding>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ImageGridCell>
            <TextField fx:id="serverUrl" maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="25.0" prefWidth="505.0"
                       promptText="ws://host.name/path" GridPane.columnIndex="2">
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </TextField>
            <Button fx:id="connectBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0"
                    text="Connect" GridPane.columnIndex="4" onAction="#actionConnectDisconnect">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </GridPane>
    </VBox>
    <VBox maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0"
          prefWidth="570.0" GridPane.rowIndex="2">
        <padding>
            <Insets left="10.0"/>
        </padding>
        <GridPane hgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="55.0" maxWidth="65.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="400.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                   prefHeight="25.0" prefWidth="60.0" text="Message" GridPane.columnIndex="0" alignment="CENTER_RIGHT"
                   styleClass="label_field">
                <padding>
                    <Insets left="0" top="0" right="5" bottom="0"/>
                </padding>
            </Label>
            <TextField fx:id="sendMsgTextField" disable="true" maxWidth="Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="25.0" prefWidth="400.0" promptText="some text"
                       GridPane.columnIndex="1">
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </TextField>
            <Button fx:id="messageSendBtn" alignment="CENTER" disable="true" maxHeight="-Infinity"
                    maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="100.0" text="Send" GridPane.columnIndex="2"
                    onAction="#sendWebsocketMessage">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <ToggleButton fx:id="sendMsgHistoryBtn" alignment="CENTER" disable="true" maxHeight="-Infinity"
                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                          mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="History"
                          GridPane.columnIndex="3">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ToggleButton>
        </GridPane>
    </VBox>
    <GridPane prefHeight="400.0" styleClass="output_grid" GridPane.rowIndex="3">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>
        <GridPane.margin>
            <Insets bottom="9.0" left="7.0" right="7.0" top="7.0"/>
        </GridPane.margin>
        <ListView fx:id="outputTextView" editable="false" prefHeight="100.0" prefWidth="200.0"
                  styleClass="output_text"/>
        <VBox GridPane.rowIndex="1" fx:id="filterBar" visible="false" managed="false">
            <FlowPane alignment="CENTER" hgap="15.0" maxHeight="-Infinity" maxWidth="Infinity"
                      minHeight="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="430.0"
                      styleClass="filter_block" GridPane.columnIndex="1">
                <padding>
                    <Insets bottom="2"/>
                </padding>
                <ToggleButton fx:id="filterOnOffBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                              prefHeight="25.0" prefWidth="100.0" text="Filter off" textAlignment="CENTER"
                              onAction="#changeFilterStatus">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </ToggleButton>
                <TextField fx:id="filterTextField" disable="true" maxHeight="-Infinity"
                           maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           prefHeight="25.0" prefWidth="150.0"/>
                <Button fx:id="filterAddBtn" disable="true" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="70.0" text="Add" onMouseClicked="#addToFilterList">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <ToggleButton fx:id="filterListBtn" disable="true" minHeight="-Infinity"
                              minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
                              prefWidth="70.0" text="List">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </ToggleButton>
            </FlowPane>
        </VBox>
    </GridPane>
    <StatusBar maxHeight="25" GridPane.rowIndex="4" fx:id="statusBar" text="">
        <padding>
            <Insets bottom="3" top="4" left="15" right="15"/>
        </padding>
        <leftItems>
            <Label fx:id="autoScrollLabel" mnemonicParsing="false" maxWidth="-Infinity" text="Auto scroll on">
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="filterStatusLabel" mnemonicParsing="false" maxWidth="-Infinity" text="Filter off">
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="timeDiffLabel" GridPane.columnIndex="2" GridPane.halignment="LEFT">
                <padding>
                    <Insets left="10" right="10" top="2"/>
                </padding>
            </Label>
        </leftItems>
        <rightItems>
            <Circle fx:id="status" radius="10.0" stroke="#fa20201f" strokeType="INSIDE" styleClass="disconnected"/>
        </rightItems>
    </StatusBar>
</GridPane>
