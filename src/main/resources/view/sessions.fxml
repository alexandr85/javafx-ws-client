<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Cursor?>
<GridPane hgap="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="190.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          stylesheets="/styles/sessions.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
    </rowConstraints>
    <FlowPane GridPane.columnIndex="0" GridPane.rowIndex="0" hgap="6" alignment="CENTER">
        <padding>
            <Insets top="7" bottom="10"/>
        </padding>
        <Label text="Current session name:"/>
        <TextField fx:id="sessionNameField" prefWidth="130.0" prefHeight="25.0" promptText="session name"/>
        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="25.0" onAction="#addSession">
            <graphic>
                <ImageView>
                    <Image url="@/images/add.png" requestedWidth="25" requestedHeight="25"/>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </FlowPane>
    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="ALWAYS"/>
        </rowConstraints>
        <GridPane.margin>
            <Insets bottom="2.0" left="7.0" right="7.0"/>
        </GridPane.margin>
        <Label fx:id="noSessionsLabel" text="No saved sessions" alignment="CENTER" prefHeight="130.0" prefWidth="300.0"/>
        <ListView fx:id="sessionsListView" visible="false" managed="false" prefHeight="136.0"/>
    </GridPane>
</GridPane>