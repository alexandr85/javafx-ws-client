<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TilePane alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          stylesheets="/styles/tab.settings.css" fx:controller="ru.testing.client.controllers.TabSettingsController">
    <GridPane alignment="TOP_CENTER" hgap="5.0" vgap="2.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints prefHeight="300" valignment="TOP"/>
        </rowConstraints>
        <HBox GridPane.columnIndex="2">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0"/>
            </padding>
            <GridPane GridPane.columnSpan="2" GridPane.rowIndex="1">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="280.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label GridPane.rowIndex="0" alignment="CENTER" maxHeight="Infinity" styleClass="title-label"
                       maxWidth="Infinity" text="Detail message" GridPane.halignment="CENTER"/>
                <CheckBox GridPane.rowIndex="1" fx:id="chWrap" mnemonicParsing="false" text="Text wrap by default"/>
                <CheckBox GridPane.rowIndex="2" fx:id="chPretty" mnemonicParsing="false"
                          text="Perform json pretty"/>
                <Label GridPane.rowIndex="3" alignment="CENTER" maxHeight="Infinity" styleClass="title-label"
                       maxWidth="Infinity" text="View settings" GridPane.halignment="CENTER"/>
                <CheckBox GridPane.rowIndex="4" fx:id="cbAutoScroll" mnemonicParsing="false" text="Enable auto scroll"/>
                <HBox GridPane.rowIndex="5" maxWidth="Infinity" maxHeight="30.0">
                    <Label text="Messages font size:" wrapText="true" maxWidth="140"/>
                    <Slider blockIncrement="1.0" max="17.0" min="10.0" value="13.0" fx:id="fontSlider"
                            prefWidth="90">
                        <padding>
                            <Insets left="7.0" right="7.0"/>
                        </padding>
                    </Slider>
                    <Label alignment="CENTER" GridPane.halignment="RIGHT" fx:id="fontLabel"/>
                </HBox>
                <StackPane GridPane.rowIndex="6">
                    <Button onAction="#loadDefaultSettings" mnemonicParsing="false" prefWidth="80.0" text="Default"
                            GridPane.rowIndex="1" alignment="CENTER" StackPane.alignment="CENTER_LEFT"/>
                    <Button onAction="#saveSettings" mnemonicParsing="false" prefWidth="80.0" text="Save"
                            GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER"
                            StackPane.alignment="CENTER_RIGHT"/>
                </StackPane>
            </GridPane>
        </HBox>
    </GridPane>
</TilePane>
