<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<TilePane alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          stylesheets="/styles/tab.settings.css">
    <GridPane alignment="CENTER" hgap="10.0" vgap="2.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

        <!-- Profiles block -->
        <HBox maxHeight="260.0" GridPane.valignment="TOP">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0"/>
            </padding>
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="30.0" minHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0"/>
                    <RowConstraints minHeight="10.0" prefHeight="60.0"/>
                </rowConstraints>
                <Label alignment="CENTER" maxHeight="Infinity"
                       maxWidth="Infinity" style="-fx-font-size: 16px;" text="Profiles"
                       underline="true" GridPane.columnSpan="2">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfProfileName" maxWidth="Infinity" prefHeight="25.0" promptText="name"
                           GridPane.rowIndex="1"/>
                <Button fx:id="bSaveProfile" maxWidth="Infinity" mnemonicParsing="false" prefHeight="25.0"
                        text="Save" GridPane.columnIndex="1" GridPane.rowIndex="1" disable="true"
                        onAction="#addProfile">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <GridPane styleClass="border-block" hgap="15.0" vgap="5.0"
                          GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <ComboBox fx:id="cbProfilesNames" maxWidth="Infinity" GridPane.columnSpan="2"/>
                    <Button fx:id="bRemove" mnemonicParsing="false" prefWidth="80.0" text="Remove" GridPane.rowIndex="1"
                            onAction="#removeProfile"/>
                    <Button mnemonicParsing="false" prefWidth="80.0" text="Load" GridPane.columnIndex="1"
                            GridPane.rowIndex="1" onAction="#loadSelectedProfile"/>
                </GridPane>
                <Label GridPane.rowIndex="3" wrapText="true" maxWidth="260" textAlignment="JUSTIFY"
                       GridPane.columnSpan="2"
                       style="-fx-font-size: 11px; -fx-font-family: 'Helvetica', Arial, sans-serif;"
                       text="Profile save data: url, headers, auto scroll status, show filter status, show bottom bar status, received messages, transferred messages, filter list"/>
            </GridPane>
        </HBox>

        <Separator orientation="VERTICAL" GridPane.columnIndex="1"/>

        <!-- Message view block -->
        <HBox GridPane.columnIndex="2">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0"/>
            </padding>
            <GridPane vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="30.0" minHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label alignment="CENTER" maxHeight="Infinity"
                       maxWidth="Infinity" style="-fx-font-size: 16px;" text="Message view"
                       underline="true" GridPane.columnSpan="2" GridPane.halignment="CENTER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <GridPane hgap="5.0" vgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <CheckBox fx:id="chWrap" mnemonicParsing="false" text="Text wrap by default" GridPane.columnSpan="2"
                              GridPane.rowIndex="0"/>
                    <Label alignment="CENTER" text="Font size: 13px" GridPane.columnIndex="1"
                           GridPane.halignment="RIGHT"
                           fx:id="fontLabel" GridPane.rowIndex="3"/>
                    <CheckBox fx:id="chPretty" mnemonicParsing="false" text="Json pretty by default (use replace regex)"
                              GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="tfRegex" promptText="regex for json pretty message" GridPane.columnSpan="2"
                               GridPane.rowIndex="2"/>
                    <Slider blockIncrement="1.0" max="17.0" min="10.0" value="13.0" GridPane.rowIndex="3"
                            fx:id="fontSlider"/>
                    <GridPane hgap="15.0" vgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                        <columnConstraints>
                            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Button onAction="#loadDefaultSettings" mnemonicParsing="false" prefWidth="80.0" text="Default"
                                GridPane.rowIndex="1"/>
                        <Button onAction="#saveSettings" mnemonicParsing="false" prefWidth="80.0" text="Save"
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="1"/>
                    </GridPane>
                </GridPane>
            </GridPane>
        </HBox>
    </GridPane>
</TilePane>
